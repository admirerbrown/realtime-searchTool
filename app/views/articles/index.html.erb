<%= form_with url: search_articles_path, method: :post, data: { controller: "debounce", debounce_target: "form" } do |form| %>
  <div class="mb-6 flex items-center px-5 py-8 shadow-md mx-3 mt-5 bg-[#333] rounded">
    <%= form.search_field :title_search, class: "p-3 border border-gray-300 rounded-md w-full focus:outline-none focus:border-blue-500 placeholder-gray-500", placeholder: "Search Articles", data: { action: "input->debounce#search", action_custom: "debounce#setSearchFired" } %>
    <button type="submit" class="ml-2 px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:shadow-outline-blue active:bg-blue-800">Search</button>
  </div>
<% end %>
<div id="search_results" class="mb-4 text-gray-600 px-5">Search Results</div>
<p style="color: green" class="mb-8"><%= notice %></p>
<h1 class="text-blue-500 text-5xl px-5 font-bold mb-6">Discover Amazing Articles</h1>
<div id="articles" class="px-5">
  <% @articles.each do |article| %>
    <div class="mb-6 p-4 border border-gray-300 rounded-md bg-white px-5">
      <%= render article %>
      <p class="mt-4">
        <%= link_to "Show this article", article, class: "text-blue-500 hover:underline" %>
      </p>
    </div>
  <% end %>
</div>
